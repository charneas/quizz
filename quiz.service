[Unit]
Description=Quiz App Uvicorn Service
After=network.target

[Service]
User=charneas
Group=charneas
WorkingDirectory=/App/quiz
Environment="PATH=/App/quiz/quiz/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/App/quiz"
ExecStart=/App/quiz/quiz/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
